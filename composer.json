{
    "name": "skrz/bunny-bundle",
    "description": "Symfony bundle that makes using RabbitMQ easy.",
    "keywords": [
        "rabbitmq",
        "rabbit",
        "bunny",
        "amqp",
        "messaging",
        "message",
        "queue",
        "queueing",
        "exchange",
        "symfony",
        "symfonyfw",
        "bundle",
        "symfony bundle"
    ],
    "minimum-stability": "stable",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Jakub Kulhan",
            "email": "jakub.kulhan@gmail.com"
        },
        {
            "name": "Lukas Senfeld",
            "email": "tech@senfeld.net"
        }
    ],
    "require": {
        "php": ">=7.4",
        "bunny/bunny": "~0.5",
        "symfony/console": "~3.4 | ~4.4 | ~5.3 | ~6.3",
        "symfony/framework-bundle": "~3.4 | ~4.4 | ~5.3 | ~6.3",
        "symfony/serializer": "~3.4 | ~4.4 | ~5.3 | ~6.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "skrz/coding-standard": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "Skrz\\Bundle\\BunnyBundle\\": "src/"
        }
    },
    "scripts": {
        "phpcbf": "./vendor/bin/phpcbf ./src -n -p",
        "phpcs": [
            "./vendor/bin/phpcs --config-set php_version 70302",
            "./vendor/bin/phpcs ./src -n -p -s"
        ],
        "phpstan": "./vendor/bin/phpstan analyse ./src",
        "phpstan-generate-baseline": "./vendor/bin/phpstan analyse ./src --generate-baseline"
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4.22"
        }
    }
}
